<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:custom="http://schemas.android.com/apk/res-auto"
	xmlns:vikas="http://schemas.android.com/apk/res-auto"
	android:id="@+id/activity_main"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="com.vikasverma.customfontsviewdemo.MainActivity">

	<com.vikasverma.customfontviews.UI.UIEditText
		android:layout_width="384dp"
		android:layout_height="44dp"
		custom:fontName="ProximaNova-Extrabold.otf"
		android:id="@+id/UIEditText"
		android:hint="Edit text Watermark"
		app:layout_constraintLeft_toLeftOf="@+id/activity_main"
		app:layout_constraintTop_toTopOf="@+id/activity_main"
		app:layout_constraintRight_toRightOf="@+id/activity_main"
		app:layout_constraintBottom_toBottomOf="@+id/activity_main"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintVertical_bias="0.0"/>
	<com.vikasverma.customfontviews.UI.UITextView
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:text="Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque laudantium, totam rem aperiam, eaque ipsa quae ab illo inventore veritatis et quasi architecto beatae vitae dicta sunt explicabo. Nemo enim ipsam voluptatem quia voluptas sit aspernatur aut odit aut fugit, sed quia consequuntur magni dolores eos qui ratione voluptatem sequi nesciunt. "
		android:textSize="18sp"
		custom:fontName="AdobeArabic-Regular.otf"
		android:id="@+id/UITextView"
		android:padding="8dp"
		app:layout_constraintLeft_toLeftOf="@+id/activity_main"
		app:layout_constraintTop_toBottomOf="@+id/UIEditText"
		android:layout_marginTop="8dp"
		app:layout_constraintRight_toRightOf="@+id/activity_main"
		app:layout_constraintBottom_toBottomOf="@+id/activity_main"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintVertical_bias="0.02"/>

	<com.vikasverma.customfontviews.UI.UICheckBox
		android:text="CheckBox"
		android:layout_width="98dp"
		android:layout_height="37dp"
		android:id="@+id/checkBox"
		custom:fontName="AdobeArabic-Regular.otf"
		app:layout_constraintLeft_toLeftOf="@+id/activity_main"
		android:layout_marginLeft="16dp"
		android:layout_marginStart="16dp"
		app:layout_constraintTop_toBottomOf="@+id/UITextView"
		android:layout_marginTop="16dp"
		app:layout_constraintBottom_toBottomOf="@+id/activity_main"
		android:layout_marginBottom="16dp"
		app:layout_constraintVertical_bias="0.0"/>

	<com.vikasverma.customfontviews.UI.UIProgressBar
		style="?android:attr/progressBarStyleLarge"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/progressBar"
		vikas:ringColor="@android:color/holo_green_dark"
		app:layout_constraintLeft_toLeftOf="@+id/activity_main"
		android:layout_marginLeft="16dp"
		android:layout_marginStart="16dp"
		app:layout_constraintTop_toBottomOf="@+id/checkBox"/>

	<com.vikasverma.customfontviews.UI.UIRadioButton
		android:text="RadioButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/radioButton"
		custom:fontName="ProximaNova-Extrabold.otf"
		app:layout_constraintLeft_toLeftOf="@+id/activity_main"
		android:layout_marginLeft="16dp"
		android:layout_marginStart="16dp"
		app:layout_constraintTop_toBottomOf="@+id/progressBar"
		android:layout_marginTop="8dp"
		app:layout_constraintRight_toRightOf="@+id/activity_main"
		android:layout_marginRight="16dp"
		android:layout_marginEnd="16dp"/>

	<com.vikasverma.customfontviews.UI.UICheckedTextView
		android:text="CheckedTextView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/checkedTextView"
		custom:fontName="AdobeArabic-Regular.otf"
		app:layout_constraintLeft_toLeftOf="@+id/activity_main"
		android:layout_marginLeft="16dp"
		android:layout_marginStart="16dp"
		app:layout_constraintTop_toBottomOf="@+id/radioButton"
		android:layout_marginTop="8dp"
		app:layout_constraintRight_toRightOf="@+id/activity_main"
		android:layout_marginRight="16dp"
		android:layout_marginEnd="16dp"/>

	<com.vikasverma.customfontviews.UI.UIButton
		android:text="Custom Button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		custom:fontName="AdobeArabic-Regular.otf"
		android:id="@+id/button"
		app:layout_constraintLeft_toRightOf="@+id/progressBar"
		android:layout_marginLeft="8dp"
		android:layout_marginStart="8dp"
		app:layout_constraintRight_toRightOf="@+id/UITextView"
		app:layout_constraintBottom_toTopOf="@+id/radioButton"
		android:layout_marginBottom="24dp"/>

</android.support.constraint.ConstraintLayout>
